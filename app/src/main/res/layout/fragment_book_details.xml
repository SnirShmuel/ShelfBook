<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bookdetail.BookDetailsFragment">

    <TextView
        android:id="@+id/bookDetails_owner_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookDetails_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookDetails_owner_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookDetails_owner_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="88dp"
        android:text="TextView"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookDetailes_conditionTxt"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:editable="false"
        android:text="Condition:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bookDetailes_imgIv"
        app:layout_constraintEnd_toStartOf="@+id/bookDetailes_conditionTv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailes_genreTxt" />

    <TextView
        android:id="@+id/bookDetailes_genreTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:editable="true"
        android:text="Book Genre"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bookDetailes_conditionTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookDetailes_genreTxt"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailes_nameTv" />

    <TextView
        android:id="@+id/bookDetailes_conditionTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:editable="true"
        android:text="Book condition"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bookDetailes_descriptionTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bookDetailes_conditionTxt"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailes_genreTv" />

    <ImageView
        android:id="@+id/bookDetailes_imgIv"
        android:layout_width="160dp"
        android:layout_height="204dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/jabbascript"
        app:layout_constraintBottom_toTopOf="@+id/bookDetailes_editBtn"
        app:layout_constraintEnd_toStartOf="@+id/bookDetailes_descriptionTv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailes_conditionTxt" />

    <TextView
        android:id="@+id/bookDetailes_nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:editable="true"
        android:text="Book name"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bookDetailes_editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Edit book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bookDetailes_deleteBook"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bookDetailes_descriptionTv"
        android:layout_width="218dp"
        android:layout_height="204dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:editable="true"
        android:text="Book description"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bookDetailes_deleteBook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bookDetailes_imgIv"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailes_conditionTv" />

    <TextView
        android:id="@+id/bookDetailes_genreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:editable="false"
        android:text="Genre:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bookDetailes_conditionTxt"
        app:layout_constraintEnd_toStartOf="@+id/bookDetailes_genreTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailes_nameTv" />

    <Button
        android:id="@+id/bookDetailes_deleteBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Delete book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bookDetailes_editBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>